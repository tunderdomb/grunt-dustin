{! scoping !}
{#global}

  {! variable !} {! (nested) partial !}
  hey {ho} let's {>"nested/partial/go"/}{~n}

  {! empty list !}
  {?emptylist}
    {#emptylist}
      {.}
    {/emptylist}
  {:else}
    I hope nobody's taping this!
  {/emptylist}
  {~n}

  {! list !}
  {#stringlist}
    {.|s}{@sep}, {/sep}
  {/stringlist}

  {~n}
  {#objectlist}
    {@math key="{$idx}" method="mod" operand="2"}
      {@eq value=0}
        {~n}
        {name|s}{~s}
      {:else}
        {name|s}
      {/eq}
    {/math}
  {/objectlist}

  {~n}
{/global}

{~n}
{! inheritance !}
{>"layouts/extended"/}
{<title}
  Child Title
{/title}
{<content}
  Child Content
{/content}

{! macros !}
{~n}
{@macro hey="hey"}
  {hey} ho let's go
{/macro}
{~n}
{@macro partial="go" go="ho"/}
{~n}
{@macro partial="a" title="hello"/}

{! raw !}
{~n}
{`
{! raw !}
Preserve all new lines,
{a}
whitespace, and braces
`}
